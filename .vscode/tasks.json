{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Uvicorn",
            "type": "shell",
            "command": "uvicorn",
            "args": [
                "Student_Information_System.main:app",
                "--reload"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run Streamlit",
            "type": "shell",
            "command": "streamlit",
            "args": [
                "run",
                "Student_Information_System/app.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        }
    ]
}
